#!/bin/bash

# Prepare commit message hook
# Applies a template to the commit message.

COMMIT_MSG_FILE="$1"
COMMIT_SOURCE="$2"

# Only apply template for new commits
if [ "$COMMIT_SOURCE" = "message" ] || [ -z "$COMMIT_SOURCE" ]; then
    echo "Applying commit template..."
    # You can add a template here if you want.
    # For example:
    # echo "# Subject: \n#\n# Body:" > "$COMMIT_MSG_FILE"
fi

echo "âœ… prepare-commit-msg hook finished."
exit 0